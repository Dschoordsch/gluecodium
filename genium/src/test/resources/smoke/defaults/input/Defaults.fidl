package smoke

interface DefaultValues {

    enumeration SomeEnum {
        FooValue
        BarValue
    }

    public enumeration ExternalEnum {
        One_Value
        Another_Value
    }

    struct StructWithDefaults {
        Int32 intField
        UInt32 uintField
        Float floatField
        Double doubleField
        Boolean boolField
        String stringField
        SomeEnum enumField
        ExternalEnum externalEnumField
    }

    struct NullableStructWithDefaults {
        Int32 intField
        UInt32 uintField
        Float floatField
        Boolean boolField
        String stringField
        SomeEnum enumField
    }

    struct StructWithSpecialDefaults {
        Float floatNanField
        Float floatInfinityField
        Float floatNegativeInfinityField
        Double doubleNanField
        Double doubleInfinityField
        Double doubleNegativeInfinityField
    }

    struct StructWithEmptyDefaults {
        Int32[] intsField
        FloatArray floatsField
        IdToStringMap mapField
        StructWithDefaults structField
    }

    typedef LongTypedef is Int64
    typedef BooleanTypedef is Boolean
    typedef StringTypedef is String
    typedef EnumTypedef is SomeEnum

    struct StructWithTypedefDefaults {
        LongTypedef longField
        BooleanTypedef boolField
        StringTypedef stringField
        EnumTypedef enumField
    }

    array FloatArray of Float
    map IdToStringMap {UInt32 to String}

    method processStructWithDefaults {
        in {
            StructWithDefaults input
        }
        out {
            StructWithDefaults output
        }
    }
}

typeCollection TypesWithDefaults {

    enumeration SomeEnum {
        FooValue
        BarValue
    }

    struct StructWithDefaults {
        Int32 intField
        UInt32 uintField
        Float floatField
        Double doubleField
        Boolean boolField
        String stringField
        SomeEnum enumField
    }

    struct ImmutableStructWithDefaults {
        Int32 intField
        UInt32 uintField
        Float floatField
        Double doubleField
        Boolean boolField
        String stringField
        SomeEnum enumField
        DefaultValues.ExternalEnum externalEnumField
    }
}
