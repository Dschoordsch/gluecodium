package smoke

interface SimpleInterface {
    fun setStringValue(stringValue: String)
    fun getStringValue(): String
}

interface NestedInterface {
    fun setSameTypeInstances(
        interfaceOne: SimpleInterface,
        interfaceTwo: SimpleInterface
    )
    fun getInstanceOne(): SimpleInterface
    fun getInstanceTwo(): SimpleInterface
    fun makeMoreExternal(input: ExternalInterface): VeryExternalInterface
    fun makeMoreExternal(input: ExternalInterface.some_Struct): VeryExternalInterface.some_Struct
    fun makeMoreExternal(input: ExternalInterface.some_Enum): VeryExternalInterface.some_Enum
}

interface InterfaceWithStruct {
    struct InnerStruct {
        value: Byte
    }

    fun innerStructMethod(inputStruct: InnerStruct): InnerStruct
}

@Cpp(ExternalType = "foo/Bar.h")
class ExternalInterface {
    struct some_Struct {
        some_Field: String
    }

    enum some_Enum {
        some_Value
    }

    fun some_Method(some_Parameter: Byte)

    property some_Attribute: String {
        @Cpp(ExternalName = "get_Me")
        get
    }
}

@Cpp(ExternalType = "foo/Bar.h", ExternalName = "::fire::Baz")
class VeryExternalInterface {
    struct some_Struct {
        some_Field: String
    }

    enum some_Enum {
        some_Value
    }

    fun some_Method(some_Parameter: Byte)

    property some_Attribute: String {
        @Cpp(ExternalName = "get_Me")
        get
        @Cpp(ExternalName = "set_Me")
        set
    }
}
